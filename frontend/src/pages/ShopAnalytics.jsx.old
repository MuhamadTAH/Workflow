import { Navigate } from 'react-router-dom';
import { tokenManager } from '../api';
import { FaChartBar } from 'react-icons/fa';
import ShopLayout from '../components/ShopLayout';

function ShopAnalytics() {
  // Check if user is authenticated
  if (!tokenManager.isLoggedIn()) {
    return <Navigate to="/login" />;
  }

  return (
    <ShopLayout title="Analytics" subtitle="Track your shop's performance and insights">
      <div className="analytics-page">
        <div className="coming-soon-card">
          <FaChartBar className="coming-soon-icon" />
          <h2>Shop Analytics</h2>
          <p>This feature is coming soon! You'll get insights on:</p>
          <ul>
            <li>Sales performance and revenue trends</li>
            <li>Most popular products</li>
            <li>Customer behavior analytics</li>
            <li>Traffic sources and conversions</li>
            <li>Inventory turnover rates</li>
          </ul>
        </div>
      </div>
    </ShopLayout>
  );
}

export default ShopAnalytics;